<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/ic_bg_breath"
    android:paddingTop="@dimen/permission_dp_20"
    tools:context=".StartTakeBreathActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/permission_dp_30"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_marginLeft="@dimen/permission_dp_10"
            android:layout_marginRight="@dimen/permission_dp_10"
            android:layout_height="@dimen/permission_dp_30"></ImageView>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_height="match_parent"></TextView>
        <ImageView
            android:layout_width="@dimen/permission_dp_30"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/permission_dp_10"
            android:layout_marginRight="@dimen/permission_dp_10"
            android:layout_height="@dimen/permission_dp_30"></ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_title_breath"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:textSize="@dimen/permission_sp_16"

            android:layout_height="@dimen/permission_dp_40"></TextView>

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:gravity="center"
            android:text="Hold the button and breath in"
            android:textColor="@color/black"
            android:textSize="20sp"></TextView>

        <ImageView
            android:id="@+id/iv_ic_iamge"
            android:layout_width="222dp"
            android:layout_height="181dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:src="@drawable/breath"></ImageView>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_operation"
        android:layout_width="100dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/side_nav_bar"
        android:text="BEGIN"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginBottom="@dimen/permission_dp_30"
        android:layout_height="100dp"></TextView>
</LinearLayout>